{
  "name": "arsenal-browser",
  "version": "0.1.0",
  "description": "Electron-based AI browser with developer tools and secure API key management.",
  "main": "src/main.js",
  "type": "commonjs",
  "author": "Arsenal Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.arsenal.browser",
    "productName": "Arsenal Browser",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Arsenal Browser",
      "backgroundColor": "#0a0a0f",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180,
          "type": "file"
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "protocols": [
      {
        "name": "HTTP",
        "schemes": ["http"]
      },
      {
        "name": "HTTPS", 
        "schemes": ["https"]
      }
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3"
  }
}
